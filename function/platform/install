source function/platform/name
source function/variable/empty

platform::install() {
  local program=$1
  local platform="$(platform::name)"
  case $platform in
    'mac')
      if ! variable::empty? "$homebrew_formula"; then
        if ! brew list | grep $homebrew_formula > /dev/null ; then
          echo "[homebrew] installing $program ..."
          brew update && brew install $homebrew_formula && return 0
        else
          echo "[$program] already installed ..."
          return 0
        fi
      fi
      ;;
    'debian')
      if ! variable::empty? "$apt_package"; then
        echo "[apt] installing $program ..."
        sudp apt update && sudo apt -y install $apt_package && return 0
      fi
      ;;
  esac

  echo "[$platform] don't know how to install $program"
  return 1
}
